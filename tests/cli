#!/usr/bin/env bats

@test "The CLI should exist and exit with code 0 if an valid argument was passed." {
  run hook help
  [ "$status" -eq 0 ]
}
@test "The CLI should exit with code 1 if an invalid argument was passed." {
  run hook invalid_argument
  [ "$status" -eq 1 ]
}
@test "The CLI should exit with code 0 if executed with the 'help:hooks' command." {
  run hook help:hooks
  [ "$status" -eq 0 ]
}
@test "The CLI should exit with code 0 if executed with the 'self-update' command." {
  run hook self-update
  [ "$status" -eq 0 ]
}
